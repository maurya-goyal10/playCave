header.header 
    nav.nav.nav--tours 
        a.nav__el(href='/') All Tours
    .header__logo
        img(src='#' alt='PlayCave logo')
    nav.nav.nav--user 
        - if(user)
            a.nav__el.nav__el--logout Logout 
            a.nav__el(href='/me') 
                img.nav__user-img(src=`#` alt=`photo of ${user.name}`)
                span= user.name.split(' ')[0]
        -else
            a.nav__el(href='/login') Log In